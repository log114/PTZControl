<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 左侧蓝色指示器 -->
    <item android:width="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A0FF"/> <!-- 浅蓝色 -->
        </shape>
    </item>

    <!-- 整个项的背景 -->
    <item
        android:top="0dp"
        android:bottom="0dp"
        android:left="4dp"> <!-- 给左侧指示器留出空间 -->
        <shape android:shape="rectangle">
            <!-- 半透明白色背景 -->
            <solid android:color="#FF6D4C41" />

            <!-- 添加顶部和底部分隔线 -->
            <stroke
                android:width="0.5dp"
                android:color="#66FFFFFF" />
        </shape>
    </item>

    <!-- 顶部和底部边框线 (模拟图片中的分隔线效果) -->
    <item android:bottom="-0.5dp"> <!-- 底部边框 -->
        <shape android:shape="rectangle">
            <solid android:color="#44FFFFFF"/>
            <size android:height="0.5dp"/>
        </shape>
    </item>
</layer-list>